<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task lists</title>
    <link rel="stylesheet" href="../css/taskList.css">
</head>
<body>
    <%- include('partials/navbar'); %> 
    <!-- navbar ejs to keep code dry (logout button) -->
    <main>
    <h1><%= user.userName %> Lists.</h1> 
    <section>
        <table class="tasklist">
            <tr>
                <th>Task lists</th>
                <th>progress</th>
            </tr>
            <tbody>
                <% if (listName.length == 0) { %>
                    <tr>
                      <td colspan='2' class="no-list"><h2>No task list</h2></td>
                    </tr>
                    <% } else {%>
                <% listName.forEach(el => { %>
                <tr>
                    <td> <%= el %> </td>
                    <td> <input type="range"> </td>
                </tr>
                <% }) %>
          <% } %>

            </tbody>
        </table>
    
      <div class="form_container">
        <form class="form" action="createList" method="post">
            <label for="listName">List name</label>
            <input type="text" name="listName" id="listName">
            <input class="btn" type="submit" value="Add list">
        </form>
      </div>
    </section>
</main>


    <script src="../js/main.js"></script>
</body>
</html>